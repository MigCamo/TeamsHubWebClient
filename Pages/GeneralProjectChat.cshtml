@page
@{
    Layout = null;
    ViewData["Title"] = "ChatGeneral";
}

<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }

    .container {
        display: flex;
        width: 100%;
        height: 100vh;
    }

    .sidebar {
        width: 60px;
        background-color: black;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px 0;
    }

    .sidebar .icon {
        width: 40px;
        height: 40px;
        margin-bottom: 20px;
        cursor: pointer;
    }

    .main-content {
        flex-grow: 1;
        background-color: white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-radius: 10px;
        margin: 20px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #e0e0e0;
        border-radius: 10px;
        padding: 10px;
    }

    .back-arrow {
        width: 30px;
        height: 30px;
        cursor: pointer;
    }

    .project-title {
        font-size: 1.5em;
        font-weight: bold;
        color: #4b2d12;
    }

    .details-button {
        background-color: black;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .details-button:hover {
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
    }

    .content {
        flex-grow: 1;
        margin: 20px 0;
    }

    .footer {
        display: flex;
        align-items: center;
    }

    .message-input {
        flex-grow: 1;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-right: 10px;
        font-size: 1em;
    }

    .send-arrow {
        width: 30px;
        height: 30px;
        cursor: pointer;
    }
</style>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ventana del Proyecto</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <a href="/"><img src="https://cdn-icons-png.flaticon.com/512/5956/5956494.png" alt="Project Icon" class="icon"></a>
            <a href="/ActivitiesModule"><img src="https://cdn-icons-png.flaticon.com/512/7891/7891841.png" alt="Task Icon" class="icon"></a>
            <a href="/FileModule"><img src="https://cdn-icons-png.flaticon.com/512/14779/14779557.png" alt="Download Icon" class="icon"></a>
            <a href="/Login"><img src="https://cdn-icons-png.flaticon.com/512/1716/1716282.png" alt="Exit Icon" class="icon"></a>
        </div>
        <div class="main-content">
            <div class="header">
                <a href="/"><img src="https://cdn-icons-png.flaticon.com/512/4885/4885344.png" alt="Back Arrow" class="back-arrow"></a>
                <span class="project-title">Nombre del proyecto</span>
                <button class="details-button" onclick="location.href='/ProjectForm'" >Ver detalles</button>
            </div>
            <div class="content">
            </div>
            <div class="footer">
                <input type="text" class="message-input" placeholder="Escribe tu mensaje aquÃ­...">
                <a href=""><img src="https://cdn-icons-png.flaticon.com/512/4735/4735571.png" alt="Send Arrow" class="send-arrow"></a>
            </div>
        </div>
    </div>
</body>
</html>

@page
@model ProjectProgressModule

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ventana del Proyecto</title>
    <link rel="stylesheet" href="/css/fileModuleStyles.css">
    <link rel="stylesheet" href="/css/projectProgressModuleStyles.css">
</head>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<body>
    <div class="container">
        <div class="sidebar">
            <a href="/"><img src="https://cdn-icons-png.flaticon.com/512/5956/5956494.png" alt="Project Icon" class="icon"></a>
            <a href="/"><img src="https://cdn-icons-png.flaticon.com/512/5073/5073264.png" alt="DetailsProyect Icon" class="icon"></a>
            <a href="/ActivitiesModule"><img src="https://cdn-icons-png.flaticon.com/512/7891/7891841.png" alt="Task Icon" class="icon"></a>
            <a href="/FileModule"><img src="https://cdn-icons-png.flaticon.com/512/14779/14779557.png" alt="Download Icon" class="icon"></a>
            <a href="/ProjectProgressModule"><img src="https://cdn-icons-png.flaticon.com/512/7185/7185654.png" alt="Reports Icon" class="icon"></a>
            <a href="/Login"><img src="https://cdn-icons-png.flaticon.com/512/1716/1716282.png" alt="Exit Icon" class="icon"></a>
        </div>
        <div class="main-content">
            <div class="header">
                <a href="/"><img src="https://cdn-icons-png.flaticon.com/512/4885/4885344.png" alt="Back Arrow" class="back-arrow"></a>
                <span class="project-title">Nombre del proyecto</span>
            </div>
            <div class="content">
                <div>
                    <div class="chart-title">Progreso del proyecto</div>
                    <div class="chart-container">
                        <canvas id="taskChart"></canvas>
                    </div>
                </div>

                <div class="task-info">
                    <p>NÃºmero de tareas: @Model.TotalTasks</p>
                    <ul>
                        <li><span style="background-color: #36A2EB;"></span> Actividades Pendientes: @Model.PendingPercentage%</li>
                        <li><span style="background-color: #FF6384;"></span> Actividades Finalizadas: @Model.FinishedPercentage%</li>
                        <li><span style="background-color: #FFCE56;"></span> Actividades En proceso: @Model.InProgressPercentage%</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        const pendingPercentage = @Model.PendingPercentage;
        const inProgressPercentage = @Model.InProgressPercentage;
        const finishedPercentage = @Model.FinishedPercentage;

        const ctx = document.getElementById('taskChart').getContext('2d');
        const taskChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Actividades Pendientes', 'Actividades En proceso', 'Actividades Finalizadas'],
                datasets: [{
                    data: [pendingPercentage, inProgressPercentage, finishedPercentage],
                    backgroundColor: ['#36A2EB', '#FFCE56', '#FF6384']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function (tooltipItem) {
                                return tooltipItem.label + ': ' + tooltipItem.raw + '%';
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>

</html>

@page
@model IndexModel
@using TeamsHubWebClient.DTOs
@using TeamsHubWebClient.SinglentonClasses;

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyectos</title>
    <link rel="stylesheet" href="/css/indexStyles.css">
</head>

<style src="/css/LoginStyles.css"></style>

<style>
    body,
    html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: 'Calibri', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('https://monkey88.bet/wp-content/uploads/2022/05/iphone.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .background {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        padding: 20px;
        overflow: hidden;
        flex: 1;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .header h1 {
        font-size: 2em;
        color: #d5dce3;
        font-weight: bold;
    }

    .header-buttons {
        display: flex;
        align-items: center;
    }

    .new-project-button {
        background-color: #055160;
        color: white;
        border: none;
        font-family: 'Arial', sans-serif;
        font-size: 1.3em;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 40px;
        cursor: pointer;
        width: 250px;
        height: 50px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-right: 50px;
    }

    .new-project-button:hover {
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
    }

    .user-button {
        position: relative;
        background: #ff000000;
        color: white;
        font-size: 25px;
        text-align: center;
        height: 52px;
        border: white;
        width: 300px;
        border-radius: 40px;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .user-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: rgb(11, 2, 2);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        overflow: hidden;
        z-index: 1;
    }

    .dropdown-content button {
        width: 200px;
        height: 45px;
        color: white;
        padding: 10px 20px;
        border: none;
        background-color: #41464b;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .dropdown-content button:hover {
        background-color: #070505;
    }

    .dropdown-content .icon {
        width: 35px;
        height: 35px;
        margin-top: 5px;
        margin-bottom: 5px;
        margin-right: 15px;
    }

    .user-button:hover .dropdown-content {
        display: block;
    }

    .projects-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        overflow-y: auto;
        flex: 1;
        scrollbar-width: none;
        -ms-overflow-style: none;
    }

    .projects-list::-webkit-scrollbar {
        display: none;
    }

    .project-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #4d617b;
        padding: 20px;
        border-radius: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .project-info {
        display: flex;
        align-items: center;
    }

    .project-info img {
        width: 150px;
        height: 150px;
        margin-right: 30px;
    }

    .project-info h2 {
        font-size: 2.5em;
        margin-top: -6px;
        margin-bottom: 13px;
        font-weight: bold;
    }

    .project-info p {
        font-weight: normal;
        font-size: 20px;
    }

    p {
        margin-top: -1px;
        margin-bottom: 2px;
    }


    .project-info p span {
        font-weight: bold;
        font-size: 22px;
    }

    .project-status {
        text-align: right;
        font-family: 'Arial', sans-serif;
        font-size: 1.5em;
    }

    .project-status p {
        font-weight: bold;
        margin-right: 40px;
    }

    .project-status p span {
        font-weight: normal;
    }

    .action-buttons {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .edit-icon {
        width: 40px;
        height: 40px;
        margin-top: 30px;
        margin-right: 15px;
    }

    .details-button {
        background-color: black;
        color: white;
        border: none;
        font-family: 'Arial', sans-serif;
        font-size: .8em;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 40px;
        cursor: pointer;
        width: 250px;
        height: 45px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

    .details-button:hover {
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
    }

    .column {
        flex: 1;
        overflow-y: auto;
    }

    .column:not(:last-child) {
        margin-right: 20px;
    }
</style>

<body>
    <div class="background">
        <div class="container">
            <div class="header">
                <h1>Mi Espacio de trabajo</h1>
                <div class="header-buttons">
                    <button class="new-project-button" onclick="location.href='/ProjectForm'">Nuevo Proyecto</button>
                    <div class="user-button">
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="User Icon"
                            class="user-icon">
                        <span>@StudentSinglenton.FullName</span>
                        <div class="dropdown-content">
                            <button onclick="location.href='/Login'">
                                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Profile Icon"
                                    class="icon"> Mi perfil
                            </button>
                            <button onclick="location.href='/Login'">
                                <img src="https://cdn-icons-png.flaticon.com/512/603/603120.png" alt="Logout Icon"
                                    class="icon"> Log out
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="projects-list column">
                @if (Model.listaCursos != null)
                {
                    @foreach (var project in Model.listaCursos)
                    {
                        <div class="project-card">
                            <div class="project-info">
                                <img src="https://cdn-icons-png.flaticon.com/512/4946/4946348.png" alt="Project Icon">
                                <div>
                                    <h2>@project.Name</h2>
                                    <p><span>Fecha de inicio:</span> @project.StartDate</p>
                                    <p><span>Fecha de cierre:</span> @project.EndDate</p>
                                </div>
                            </div>
                            <div class="project-status">
                                <p>Estatus: <span>Activo</span></p>
                                <div class="action-buttons">
                                    <img src="https://cdn-icons-png.flaticon.com/512/1160/1160515.png" alt="Edit Icon"
                                        class="edit-icon">
                                    <form method="post" asp-page-handler="Move">
                                        <input type="hidden" name="IdProject" value="@project.IdProject" />
                                        <input type="hidden" name="NameProject" value="@project.Name" />
                                        <button type="submit" class="details-button">Ver más</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>

</html>
